{
  "compilerOptions": {
    "outDir": "../dist-server",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "lib": ["ES2020"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "../client", "../dist-server"]
}