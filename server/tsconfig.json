{
  "compilerOptions": {
    "outDir": "../dist-server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "lib": ["ES2020"],
    "types": ["node", "express", "express-session", "cors", "bcrypt", "nodemailer"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../client",
    "../dist-server"
  ]
}