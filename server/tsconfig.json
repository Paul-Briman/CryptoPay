{
  "compilerOptions": {
    "outDir": "../dist-server",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "../client", "../dist-server",  "../client/vite.config.ts"]
}